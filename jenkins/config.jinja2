# {{ salt['pillar.get']('message_do_not_modify') }}

NAME=jenkins

JAVA=/usr/bin/java

JAVA_ARGS="-Djava.io.tmpdir=/var/lib/jenkins/tmp {% if not salt['monitoring.data']()['ip_addrs6']['public'] %}-Djava.net.preferIPv4Stack=true {% endif %}-Djava.awt.headless=true"

PIDFILE=/var/run/jenkins/jenkins.pid

JENKINS_USER=jenkins
JENKINS_GROUP=jenkins

JENKINS_WAR=/usr/share/jenkins/jenkins.war

JENKINS_HOME=/var/lib/jenkins

RUN_STANDALONE=true

JENKINS_LOG=/var/log/jenkins/$NAME.log
{#- daemon.info ? #}

MAXOPENFILES=8192

HTTP_PORT=8080

AJP_PORT=-1

PREFIX=/jenkins

JENKINS_ARGS="--webroot=/var/cache/jenkins/war --httpPort=$HTTP_PORT --ajp13Port=$AJP_PORT"
