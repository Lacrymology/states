# {{ pillar['message_do_not_modify'] }}
{#- var passed by context #}
{%- set name = appname %}
{%- set root_path= root %}
{%- set static_dirs = statics|default([]) %}

{%- block header %}
{%- endblock %}

{%- block upstream %}
upstream {{ name }} {
    server unix:///var/lib/uwsgi/{{ name }}.sock;
}
{%- endblock %}

server {
    listen 80;
{% if salt['pillar.get'](name + ':ssl', False) %}
{% if salt['pillar.get'](name + ':ssl_redirect', False) %}
    {# if https, redirect http port 80 to https port 443 #}
    server_name {% for hostname in pillar[name]['hostnames'] %}{{ hostname }}{% if not loop.last %} {% endif %}{% endfor %};
    return 301 https://{{ pillar[name]['hostnames'][0] }}$request_uri;
}
{#- https server #}
server {
{% endif %}{# redirect http to https #}
{%- from 'nginx/macro.jinja2' import ssl_config with context %}
    {{ ssl_config(pillar[name]['ssl']) }}
{% endif %}
{#- web app logic #}
    server_name {% for hostname in pillar[name]['hostnames'] %}{{ hostname }}{% if not loop.last %} {% endif %}{% endfor %};
    root {{ root_path }};

{% include "nginx/block_hacks.jinja2" %}

{#- reserve for directives should go before all other location #}
{%- block first_location %}
{%- endblock %}

{%- block static_location %}
{% for dir in static_dirs %}
    location /{{ dir }}/ {
        expires max;
        autoindex off;
    }
{%- endfor %}
{%- endblock %}

{%- block root_location -%}
{#- magic number: php(14), ruby(7) #}
    location / {
        gzip off;
        include uwsgi_params;
        uwsgi_read_timeout {{ salt['pillar.get'](name ~ ':timeout', 60) }};
        uwsgi_send_timeout {{ salt['pillar.get'](name ~  'timeout', 60) }};
        uwsgi_pass {{ name }};
        {%- if uwsgi|default(False) %}
        uwsgi_modifier1 {{ uwsgi }};
        {%- endif %}
    }
{%- endblock %}

{%- block robottxt_location %}
{% include 'nginx/location_robots.jinja2' %}
{%- endblock %}

{%- block footer %}
{%- endblock %}
}
