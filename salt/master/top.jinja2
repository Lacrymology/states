{%- set saltenv =  salt['pillar.get']('branch', 'base') -%}
{%- if saltenv == 'master' -%}
  {%- set saltenv = 'base' -%}
{%- endif %}
{%- set roles = salt['pillar.get']('roles', []) -%}
{%- set global_roles = salt['pillar.get']('global_roles', []) -%}
{%- if global_roles in ('', []) -%}
    {%- set global_roles = salt['cp.list_master_dirs'](saltenv, 'roles') -%}
{%- endif -%}

{#- local mode don't support gitfs and multiple branches, force to use
   'base' environment #}
{%- if opts['file_client'] == 'local' %}
base:
{%- else -%}
  {#- file_client not in local mode.
      salt gitfs rename master branch into base. which is also the default
      value #}
{{ saltenv }}:
{%- endif -%}
  {#- target all minions #}
  '*':
{%- if not roles and not global_roles -%}
    {#- do nothing #}
    - salt.noop
{%- else -%}
    {#- empty is True if no roles (or roles.absent) are applied -#}
    {%- set check = {'empty': True} -%}
    {#- list all minion's role and absent role it's not member of -#}
    {%- for role in global_roles -%}
        {%- if role in roles -%}
            {%- do check.update({'empty': False}) %}
    - roles.{{ role }}
        {%- elif salt['pillar.get']('roles_absent', False) -%}
            {%- do check.update({'empty': False}) %}
    - roles.{{ role }}.absent
        {%- endif -%}
    {%- endfor -%}
    {#- it's possible that a minion don't have any roles, so do nothing -#}
    {%- if empty %}
    - salt.noop
    {%- endif -%}
{%- endif -%}
