{%- set reserved_keys = ('check', 'description', 'passive') -%}
{%- set data = salt['monitoring.shinken'](mine) -%}
{%- for check_name in data -%}
    {%- for check in data[check_name] %}
define service {
    use salt-service
    service_description {% if loop.first and loop.last -%}
            {#- if only one in the list -#}
            {{ check_name }}
        {%- elif loop.first -%}
            {#- there is more than 1, but this is the first one -#}
            {{ check_name }}
        {%- else -%}
            {#- more than 1 and this is not the first one -#}
            {{ check_name }}-{{ loop.index0 + 1 }}
        {%- endif %}
    host_name {% for minion in check.minions -%}
        {{ minion }}
        {%- if not loop.last %},{% endif -%}
    {%- endfor %}
    display_name {{ check.data['description'] }}
        {%- if not check.data.get('passive', True) -%}
            {#- by default check are passive #}
    active_checks_enabled 1
    passive_checks_enabled 0
    check_freshness 0
        {%- endif -%}
    {%- set default_check = 'check_nrpe!' + check_name %}
    check_command {{ check.data.get('check', default_check) }}
    {#- everything else -#}
        {%- for key_name in check.data -%}
            {%- if key_name not in reserved_keys %}
    {{ key_name }} {{ check.data[key_name] }}
            {%- endif -%}
        {%- endfor -%}
        {#- `business_rule_service_notification_options` only available from 2.0 #}
        {%- if check_name in ('shinken_broker_http', 'shinken_broker_web') %}
    notification_options n
        {%- endif %}
}
    {%- endfor -%}
{%- endfor -%}

{%- for service in ('shinken_broker_http', 'shinken_broker_web') %}
define service {
    use salt-service
    host_name {{ pillar['shinken']['architecture']['broker'][0] }}
    service_description {{ service }}_cluster
    check_command bp_rule!({{ pillar['shinken']['architecture']['broker'][0] }},{{ service }} | {{ pillar['shinken']['architecture']['broker'][1] }},{{ service }})
    business_rule_service_notification_options n
    business_rule_smart_notifications 1
}
{%- endfor -%}
